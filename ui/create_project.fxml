<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edward.testpreprocessor.uicontroller.CreateProjectController">
   <top>
      <Label text="Create a new project" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Project name">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="projectNameField" prefHeight="40.0" promptText="Enter the project name" />
            <Label text="Project treshold">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Spinner fx:id="thresholdField" editable="true" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="560.0" />
            <Label text="Project weight">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="weightField" maxWidth="1.7976931348623157E308" prefHeight="40.0" />
            <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="560.0">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="33.0" prefWidth="98.0" text="Create" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
